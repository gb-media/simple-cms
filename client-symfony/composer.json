{
    "name": "simple-cms/client-symfony",
    "type": "project",
    "description": "An example of a website made with symfony 4 and guzzle.",
    "license": "proprietary",
    "authors": [
        {
            "name": "Prou Yann",
            "email": "prouyann@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "*",
        "symfony/yaml": "*",
        "webmozart/assert": "^1.3"
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpstan/phpstan": "^0.10.5",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpstan/phpstan-symfony": "^0.10.2",
        "phpstan/phpstan-webmozart-assert": "^0.10.0",
        "symfony/dotenv": "*",
        "symfony/phpunit-bridge": "^4.1.7",
        "symfony/profiler-pack": "^1.0.3"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.1.*"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "phpcs": [
            "./vendor/bin/php-cs-fixer fix -v --show-progress=dots"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse src tests --level=7 --no-progress -vvv"
        ],
        "phpunit": [
            "./bin/phpunit"
        ]
    }
}
