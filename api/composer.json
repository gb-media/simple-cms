{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "api-platform/api-pack": "^1.1",
        "guzzlehttp/guzzle": "^6.3",
        "neronmoon/scriptsdev": "^0.1.3",
        "ramsey/uuid-doctrine": "^1.5",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.5",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpstan/phpstan": "^0.10.5",
        "phpstan/phpstan-doctrine": "^0.10.0",
        "phpstan/phpstan-symfony": "^0.10.2",
        "symfony/profiler-pack": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpcs": [
            "./vendor/bin/php-cs-fixer fix --show-progress=dots -vvv"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse src --level=7 --no-progress -vvv"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "hooks": {
            "pre-commit": "docker-compose run --rm php sh -c 'composer phpcs && composer phpstan'"
        },
        "scripts-dev": {
            "post-install-cmd": [
                "./vendor/bin/cghooks add --ignore-lock --git-dir=../.git"
            ],
            "post-update-cmd": [
                "./vendor/bin/cghooks update --git-dir=../.git"
            ]
        },
        "symfony": {
            "allow-contrib": false
        }
    }
}
